{
  "$schema": "http://json-schema.org/draft/2020-12/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "logo": {
      "type": "uri"
    },
    "locales": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        },
        "minItems": 1,
        "maxItems": 3
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "defaults": {
      "type": "object",
      "properties": {
        "supportsFavorites": {
          "type": "bool"
        },
        "favoriteInnerColor": {
          "$ref": "definitions.json#/color"
        },
        "favoriteOuterColor": {
          "$ref": "definitions.json#/color"
        },
        "favoriteTooltip": {
          "$ref": "definitions.json#/text"
        },
        "notificationTimeBefore": {
          "$ref": "definitions.json#/duration"
        },
        "favoriteSnackText": {
          "$ref": "definitions.json#/text"
        },
        "unfavoriteSnackText": {
          "$ref": "definitions.json#/text"
        },
        "notificationTitle": {
          "$ref": "definitions.json#/text"
        },
        "notificationBody": {
          "$ref": "definitions.json#/text"
        }
      },
      "required": [
        "supportsFavorites",
        "favoriteOuterColor",
        "favoriteInnerColor",
        "favoriteTooltip",
        "notificationTimeBefore",
        "favoriteSnackText",
        "unfavoriteSnackText",
        "notificationTitle",
        "notificationBody"
      ],
      "additionalProperties": false
    },
    "eventSections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "$ref": "definitions.json#/text"
          },
          "events": {
            "type": "array",
            "items": {
              "id": {
                "$ref": "definitions.json#/id"
              },
              "title": {
                "$ref": "definitions.json#/text"
              },
              "startDate": {
                "type": "date"
              },
              "endDate": {
                "type": "date"
              },
              "avatar": {
                "type": "uri"
              },
              "config": {
                "type": "string",
                "minLength": 1
              },
              "primarySwatchColor": {
                "$ref": "definitions.json#/color"
              },
              "accentColor": {
                "$ref": "definitions.json#/color"
              }
            },
            "additionalProperties": false,
            "required": [
              "id",
              "title",
              "startDate",
              "endDate",
              "config"
            ]
          }
        },
        "required": [
          "events"
        ]
      }
    },
    "legal": {
      "type": "object",
      "properties": {
        "labels": {
          "type": "object",
          "properties": {
            "terms": {
              "$ref": "definitions.json#/text"
            },
            "about": {
              "$ref": "definitions.json#/text"
            }
          },
          "required": [
            "terms",
            "about"
          ],
          "additionalProperties": false
        },
        "terms": {
          "$ref": "definitions.json#/text"
        },
        "copyright": {
          "$ref": "definitions.json#/text"
        }
      },
      "required": [
        "labels",
        "terms",
        "copyright"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": [
    "version",
    "logo",
    "defaults",
    "eventSections",
    "legal"
  ]
}
